{
	"compilerOptions": {
		"target": "ES2019",
		"sourceMap": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"outDir": "./dist/server",
		"lib": ["es5", "es6", "ES2019"],
		"moduleResolution": "node",
		"types": ["node"],
		"incremental": true,
		"composite": true,
		"baseUrl": "server"
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"include": ["**/*.ts", "**/*.json"],
	"exclude": ["./dist", "**/*.test.ts"]
}
